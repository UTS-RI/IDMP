<launch>

    <arg name="plan" default="false" />
    <arg name="live" default="true" />
    <arg name="realsense" default="false" />
    
    <include file="$(find realsense2_camera)/launch/rs_camera.launch">
        <arg name="enable_pointcloud"   value="true"/>
        <arg name="enable_depth"   value="true"/>
    </include> 
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link" args="0.11515818 0.36441606 1.53394539 0.63145631 -0.65879433  0.28596513  0.29236433 camera_depth_optical_frame base_link" />
   
    <rosparam file="$(find gpismap_ros)/config/params_live.yaml" />
    <node pkg="gpismap_ros" type="gpismap3" name="gpismap_ros" output="screen" respawn="true"/> 

    <group if="$(arg plan)">
        <include file="$(find ur5e_moveit_config)/launch/demo.launch" />
    </group>
    
    <group unless="$(arg plan)">
        <node pkg="rviz" type="rviz" name="rviz" respawn="false" args="-d $(find gpismap_ros)/config/LogGPIS.rviz" output="screen"/>
    </group>
    
</launch>